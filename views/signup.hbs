<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="/css/style2.css">
    <title>Login</title>
</head>
<body>
    
    <div class="container">
        <div class="forms ">
            <!-- Registration Form -->
            <div class="form signup">
                <span class="title">Registration</span>
                {{#if message }}
                <h4 class="errorMsg" style="color:red ;">{{message}}</h4>
                {{/if}}
                <form action="/auth/signup" method="POST" id="signup-form" >
                    <div class="input-field">
                        <input type="text" placeholder="Username" name="username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                         <input type="email" placeholder="Email" name="email" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" class="id_password" placeholder="Password" minlength="8" maxlength="28" name="password"   required>
                        <i class="uil uil-lock icon"></i>
                       <i class="uil uil-eye-slash showHidePw"  id="togglePassword2" onclick="showEye(2)"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" class="id_password" placeholder="Confirm Password"minlength="8" maxlength="28" name="passwordConfirm"  required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"  id="togglePassword3" onclick="showEye(3)"></i>
                    </div>
                        <div class="input-field">
                        <input type="tel" name="phonenumber" id="phone" placeholder="Phone Number" required>
                        <i class="uil uil-phone"></i>
                    </div>
                     <div class="input-field">
                        <input type="text" name="gender" id="gender" placeholder="gender" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input type="text" name="university" id="university" placeholder="university name" required>
                        <i class="uil uil-user"></i>
                    </div>
                    
                

                    <div class="input-field button">
                        <input class="btn" id="submit" type="submit" value="SignUp">
                    </div>
                </form>

                <div class="login-signup">
                    <span class="text">already a member?
                        <a href="/signin" class="text login-link">Signin now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>


<script src="script.js"></script>

</body>
</html>